    <form class="my-form" action='/admin/add' method="POST">
        <div class="container">
          <h1>Add Tickets!</h1>
          
          <ul>
            <li>
              <input type="text" name="trainno" placeholder="Trainno">
            </li>
            <li>
              <div class="grid grid-2">
                <input type="text" placeholder="Source" name="Source"required>  
                <input type="text" placeholder="Destination"  name = "Destination"required>
              </div>
            </li>
            <li>
               <center><h3>Enter Timing</h3></center>
            </li>
            <li>
              <div class="grid grid-2">
                <input type="time"  name="arrivaltime" required>  
                <input type="time"  name="deputuretime" required>
              </div>
            </li>    
            <li>
                <div class="grid grid-2">
                    <input type="date" placeholder="Enter Date" name="date" required>  
                    <input type="number" placeholder="Price" name="price" required>
                  </div>
            </li>   
           
            <li>
              <div class="grid grid-3">
                <center>
                <button class="btn-grid" type="submit" >
                  <span class="back">
                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/162656/email-icon.svg" alt="">
                  </span>
                
                  <span class="front">SUBMIT</span>
                </button>
            </center>
                 
              </div>
            </li>    
          </ul>
        </div>
      </form>
